<% include ../partials/header %>
<div class="page-content">
<div class="container">
    <div class="row">
        <h2 style="text-align: center; margin-top:200px;">Create a New Portfolio</h2>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/portfolios" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="numberofservice" placeholder="number of service">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service1" placeholder="service1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service2" placeholder="service2">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service3" placeholder="service3">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="service4" placeholder="service4">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="video">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="date" placeholder="date">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="host" placeholder="host">
                </div>                
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/portfolio">Go Back</a>
        </div>
    </div>
</div>
</div>
<% include ../partials/footer %>

