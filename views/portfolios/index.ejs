<div class="container">
  <select onchange="window.location.href=this.value">
      <option value="/">All Year</option>
      <option value="/portfolios/event/2017">2017</option>
      <option value="/portfolios/event/2016">2016</option>
      <option value="/portfolios/event/2015">2015</option>
  </select>
  <!-- <a href="/year/2015">2015&nbsp</a>|<a href="/year/2016">2016&nbsp</a>|<a href="/year/2017">2017&nbsp</a> -->
</div>
<section class="posts">
<% portfolios.forEach(function(portfolio){ %>
  <article>
    <header>
      <span class="date"><%=moment(portfolio.date).format('LL')%></span>
      <h2><%= portfolio.name %></h2>
    </header>
    <a href="#" class="image fit"><img src="<%= portfolio.image %>" alt="" /></a>
    <!-- <p><strong>Services: </strong><br> <%=portfolio.service1%> <br> <%=portfolio.service2%> <br> <%=portfolio.service3%> <br> <%=portfolio.service4%> <br></p> -->
    <p><%-portfolio.desc.substring(0,100)%>...</p>
    <ul class="actions">
      <li><a href="/portfolios/<%= portfolio._id %>" class="button">Read more</a></li>
    </ul>
  </article>
<% } ) %>
</section>

<ul class="pagination">
    <li>
        <% for (var i = 0; i<pages;i++){ %>
            <% if(i===0) {%>
                <li><a href="/portfolios"><%= i+1 %></a></li>
            <% } else {%>
                <li><a href="/portfolios/page/<%= i %>"><%= (i+1) %></a></li>
            <% } %>
        <% } %>
    </li>
</ul>

